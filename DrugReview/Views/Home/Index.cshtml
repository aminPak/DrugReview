@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero text-center">
    <div class="container">
        <h1 class="display-4 mb-4">AI-Powered Drug Review & Supplement Recommendations</h1>
        <p class="lead mb-4">Make informed decisions about your medications and supplements with our intelligent health
            platform.</p>
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Auth" asp-action="Register" class="btn btn-lg btn-accent">
                    <i class="fas fa-user-plus me-2"></i>Get Started
                </a>
                <a asp-controller="Auth" asp-action="Login" class="btn btn-lg btn-outline-light">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </a>
            </div>
        }
        else
        {
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-lg btn-accent">
                <i class="fas fa-chart-line me-2"></i>Go to Dashboard
            </a>
        }
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Key Features</h2>
        <div class="row">
            <!-- Drug Interactions -->
            <div class="col-md-4 mb-4">
                <div class="feature-card text-center">
                    <i class="fas fa-pills mb-3"></i>
                    <h3>Drug Interactions</h3>
                    <p>Check potential interactions between your medications and get real-time safety alerts.</p>
                </div>
            </div>

            <!-- AI Recommendations -->
            <div class="col-md-4 mb-4">
                <div class="feature-card text-center">
                    <i class="fas fa-brain mb-3"></i>
                    <h3>AI Recommendations</h3>
                    <p>Receive personalized supplement suggestions based on your health profile and medications.</p>
                </div>
            </div>

            <!-- Lab Results -->
            <div class="col-md-4 mb-4">
                <div class="feature-card text-center">
                    <i class="fas fa-vial mb-3"></i>
                    <h3>Lab Results</h3>
                    <p>Securely store and track your lab results to monitor your health progress over time.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">How It Works</h2>
        <div class="row">
            <div class="col-md-3 text-center mb-4">
                <div class="h1 text-accent mb-3">1</div>
                <h4>Create Account</h4>
                <p>Sign up and create your health profile with basic information.</p>
            </div>
            <div class="col-md-3 text-center mb-4">
                <div class="h1 text-accent mb-3">2</div>
                <h4>Add Medications</h4>
                <p>Input your current medications and supplements.</p>
            </div>
            <div class="col-md-3 text-center mb-4">
                <div class="h1 text-accent mb-3">3</div>
                <h4>Upload Lab Tests</h4>
                <p>Securely upload your lab test results.</p>
            </div>
            <div class="col-md-3 text-center mb-4">
                <div class="h1 text-accent mb-3">4</div>
                <h4>Get Insights</h4>
                <p>Receive AI-powered recommendations and insights.</p>
            </div>
        </div>
    </div>
</section>

<!-- Supplements Section -->
<section class="py-5 bg-gradient supplements-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <h2 class="mb-4">Discover Our Supplement Shop</h2>
                <p class="lead mb-4">Explore our curated collection of high-quality supplements, backed by science and
                    selected by our AI system.</p>
                <ul class="list-unstyled mb-4">
                    <li class="mb-3"><i class="fas fa-check-circle me-2"></i>Premium quality supplements</li>
                    <li class="mb-3"><i class="fas fa-check-circle me-2"></i>AI-powered recommendations</li>
                    <li class="mb-3"><i class="fas fa-check-circle me-2"></i>Verified by healthcare professionals</li>
                    <li class="mb-3"><i class="fas fa-check-circle me-2"></i>Drug interaction checks</li>
                </ul>
                <a asp-controller="Supplements" asp-action="Index" class="btn btn-light btn-lg">
                    <i class="fas fa-shopping-cart me-2"></i>Visit Shop
                </a>
            </div>
            <div class="col-md-6">
                <div class="row g-4">
                    <div class="col-6">
                        <div class="card h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-heart display-4 text-accent mb-3"></i>
                                <h4 class="mb-2">Heart Health</h4>
                                <p class="mb-0">Support cardiovascular wellness</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-brain display-4 text-accent mb-3"></i>
                                <h4 class="mb-2">Brain Health</h4>
                                <p class="mb-0">Enhance cognitive function</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-bone display-4 text-accent mb-3"></i>
                                <h4 class="mb-2">Bone Health</h4>
                                <p class="mb-0">Strengthen bone density</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card h-100">
                            <div class="card-body text-center p-4">
                                <i class="fas fa-shield-virus display-4 text-accent mb-3"></i>
                                <h4 class="mb-2">Immunity</h4>
                                <p class="mb-0">Boost immune system</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Trust Section -->
<section class="py-5 trust-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2>Why Trust Us?</h2>
                <ul class="list-unstyled">
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-accent me-2"></i>
                        Advanced AI technology for accurate recommendations
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-accent me-2"></i>
                        Secure and private health data storage
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-accent me-2"></i>
                        Regular updates from reliable medical databases
                    </li>
                    <li class="mb-3">
                        <i class="fas fa-check-circle text-accent me-2"></i>
                        User-friendly interface for easy navigation
                    </li>
                </ul>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Important Note</h4>
                        <p class="card-text">
                            While our AI provides valuable insights, it's important to consult with healthcare
                            professionals before making any changes to your medication or supplement routine.
                        </p>
                        <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary">
                            <i class="fas fa-info-circle me-2"></i>Learn More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
