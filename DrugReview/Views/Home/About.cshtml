@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-center mb-5">@ViewData["Title"]</h1>

            <!-- Mission Statement -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center p-4">
                    <i class="fas fa-heart text-accent fa-3x mb-3"></i>
                    <h2 class="h4 mb-3">Our Mission</h2>
                    <p class="lead mb-0">
                        To empower individuals with AI-driven health insights, making medication and supplement decisions safer and more informed.
                    </p>
                </div>
            </div>

            <!-- Main Content -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- What We Do -->
                    <section class="mb-5">
                        <h2 class="h4 mb-4">What We Do</h2>
                        <p>
                            Drug Review is an innovative platform that combines artificial intelligence with comprehensive medical databases to:
                        </p>
                        <ul>
                            <li>Analyze potential drug interactions and conflicts</li>
                            <li>Provide personalized supplement recommendations</li>
                            <li>Track and manage your medications</li>
                            <li>Store and analyze lab test results</li>
                        </ul>
                    </section>

                    <!-- AI Technology -->
                    <section class="mb-5">
                        <h2 class="h4 mb-4">Our AI Technology</h2>
                        <p>
                            Our platform utilizes advanced artificial intelligence to:
                        </p>
                        <ul>
                            <li>Process complex medical data and research</li>
                            <li>Identify potential drug interactions</li>
                            <li>Generate personalized health insights</li>
                            <li>Recommend suitable supplements based on your health profile</li>
                        </ul>
                    </section>

                    <!-- Important Disclaimer -->
                    <section class="mb-5">
                        <div class="alert alert-warning">
                            <h3 class="h5 mb-3">
                                <i class="fas fa-exclamation-triangle me-2"></i>Important Disclaimer
                            </h3>
                            <p class="mb-0">
                                The information provided by Drug Review is for informational purposes only and is not a substitute for professional medical advice. Always consult with your healthcare provider before making any changes to your medication or supplement routine.
                            </p>
                        </div>
                    </section>

                    <!-- Data Security -->
                    <section class="mb-5">
                        <h2 class="h4 mb-4">Data Security</h2>
                        <p>
                            We prioritize the security and privacy of your health information:
                        </p>
                        <ul>
                            <li>End-to-end encryption for sensitive data</li>
                            <li>Compliance with healthcare data protection standards</li>
                            <li>Regular security audits and updates</li>
                            <li>Transparent privacy policies</li>
                        </ul>
                    </section>

                    <!-- Team -->
                    <section class="mb-5">
                        <h2 class="h4 mb-4">Our Team</h2>
                        <p>
                            Drug Review is developed by a dedicated team of:
                        </p>
                        <ul>
                            <li>Healthcare professionals</li>
                            <li>AI specialists</li>
                            <li>Data security experts</li>
                            <li>User experience designers</li>
                        </ul>
                    </section>

                    <!-- Contact Information -->
                    <section>
                        <h2 class="h4 mb-4">Contact Us</h2>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-envelope fa-2x text-primary me-3"></i>
                                    <div>
                                        <h3 class="h6 mb-1">Email</h3>
                                        <p class="mb-0">contact@drugreview.com</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-phone fa-2x text-primary me-3"></i>
                                    <div>
                                        <h3 class="h6 mb-1">Phone</h3>
                                        <p class="mb-0">(555) 123-4567</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div> 